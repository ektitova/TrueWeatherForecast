<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.weatherforecast">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.app.weatherforecast.ui.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.weatherforecast.ui.DetailsActivity"
            android:parentActivityName="com.app.weatherforecast.ui.MainActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.weatherforecast.ui.MainActivity" />
        </activity>
        <activity android:name="com.app.weatherforecast.ui.SettingsActivity"></activity>
        <service android:enabled="true"
            android:exported="false"
            android:name="com.app.weatherforecast.WeatherBackgroundSyncService" />

        <service
            android:name="com.app.weatherforecast.UpdateWeatherJobService"
            android:exported="false">
        <intent-filter>
            <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
        </intent-filter>
        </service>
    </application>

</manifest>